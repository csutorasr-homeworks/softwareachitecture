@page
@model Web.Pages.Games.DetailsModel

@{
    ViewData["Title"] = "Results";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Results</h2>

<table>
    <tr>
        <td></td>
        @foreach (var user in Model.GameResult.Users)
        {
            <td>
                @user.UserName
            </td>
        }
    </tr>
    @foreach (var question in Model.GameResult.QuestionsWithResult)
    {
        <tr>
            <td>@question.Text</td>
            @foreach (var user in Model.GameResult.Users)
            {
                <td>
                    @if (question.PointsByUser.ContainsKey(user.UserId))
                    {
                        <text>
                            @question.PointsByUser[user.UserId]
                        </text>
                    }
                </td>
            }
        </tr>
    }
    <tr>
        <th>Sum</th>
        @foreach (var user in Model.GameResult.Users)
        {
            <td>
                @Model.GameResult.SumPointsByUser[user.UserId]
            </td>
        }
    </tr>
</table>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
